set $screenshotmode screenshot (f) fullscreen, (a) area, (i) interative
mode "$screenshotmode" {
        bindsym f exec gnome-screenshot, mode "default"
        bindsym a exec gnome-screenshot -a, mode "default"
        bindsym i exec gnome-screenshot -i, mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+shift+s mode "$screenshotmode"



